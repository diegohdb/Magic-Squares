<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.magicsquares.MainActivity"
    tools:ignore="MergeRootFrame,ContentDescription" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="In this Magic Squares game you have to insert different numbers inside the squares, so that the sum of the numbers vertically, horizontally, and diagonally have to be equal."
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    android:background="#000"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="150dp"
                        android:layout_height="164dp"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/horizontal" />

                    <TextView
                        android:id="@+id/horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="The horizontal lines are represented by H1, H2, H3, and H4."
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:background="#000"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="150dp"
                        android:layout_height="164dp"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/vertical" />

                    <TextView
                        android:id="@+id/vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="The vertical lines are represented by V1, V2, V3, and V4."
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:background="#000"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="150dp"
                        android:layout_height="164dp"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/diagonals" />

                    <TextView
                        android:id="@+id/diagonals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="The diagonal lines are represented by D1 and D2."
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:background="#000"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="150dp"
                        android:layout_height="164dp"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/sums" />

                    <TextView
                        android:id="@+id/sums"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="The H`s represent the horizontal values sums, The V`s represent the vertical values sums, and the D`s represent the diagonal values sums."
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#000"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="150dp"
                        android:layout_height="164dp"
                        android:layout_marginTop="-30dp"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/buttons" />

                    <TextView
                        android:id="@+id/buttons"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="1dp"
                        android:text="Use the button SAVE to save the values already inserted in the squares, so you can continue the game later. Use the button CHECK to know the actual sums in all directions and to verify if you won the game. Use the button QUIT to exit the game, make sure you saved before. And the button HELP bring you here!"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:background="#000"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Make sure there are not duplicate numbers and the horizontal, vertical, and diagonal sum are equal to win the game. Let`s go challenge yourself and have some fun!"
                        android:textAlignment="textEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/btBackgame"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-40dp"
                    android:gravity="center_horizontal"
                    android:text="Close"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>